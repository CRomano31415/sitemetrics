<div class="row">
    <div class="col-md-8">
      <div>
        <h3><%= @r_app.name %></h3>
      </div>

      <div class="row">
       <h4><%= @r_app.url %></h4>
       <% @event.each do |name, event| %>
         <h3><%= name %>:</h3>
          <p>Count: <%= event.size %></p>
         <% end %>
      </div>
    </div>

    <div class="col-md-4">
      <%= link_to "Back to index", r_app_path, class: 'btn btn-primary' %>
      <%= link_to "Edit", edit_r_app_path(@r_app), class: 'btn btn-success' %>
      <%= link_to "Delete", @r_app, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this app?'} %>
    </div>
  </div>